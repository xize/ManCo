      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>fr.neatmonster</groupId>
      <artifactId>nocheatplus</artifactId>
      <version>-3.10.13-SNAPSHOT</version>
      <scope>system</scope>
      <systemPath>C:\Users\Guido\ManCo\repo\nocheatplus-3.10.13-SNAPSHOT.jar</systemPath>
    </dependency>
  </dependencies>
</project>

